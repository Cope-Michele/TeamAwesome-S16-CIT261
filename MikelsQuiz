    <div id="score"></div>
    <br><br>
    Score results:<br>
    -500 through 1: We don't have much in common, but we can be friends anyway.<br> 
    2 through 4: We have a little bit in common<br>
    5 through 6: We have quite a bit in common<br>
    7+: Good job, maybe you need to clear your local storage.
    <p>Your score will be saved in local storage. Each time you take this test the points you get will be added to your old score.</p>
    <button type="button" onclick="reset()">You can reset your score by clicking here.</button>



    <script>
        function videoGames() {
            var vGames = new XMLHttpRequest();
            vGames.onreadystatechange = function () {
                if (vGames.readyState == 4 && vGames.status == 200) {
                    document.getElementById("question1").innerHTML = vGames.responseText;
                }
            };
            vGames.open("GET", "z1.txt", true);
            vGames.send();

            if (typeof (Storage) !== "undefined") {
                if (localStorage.score) {
                    localStorage.score = Number(localStorage.score) + 1;
                } else {
                    localStorage.score = 1;
                }
                document.getElementById("score").innerHTML = "Your score: " + localStorage.score;
            } else {
                document.getElementById("score").innerHTML = "Sorry, you need a device with web storage to save your score.";
            }
        }



        function hiking() {
            var hike = new XMLHttpRequest();
            hike.onreadystatechange = function () {
                if (hike.readyState == 4 && hike.status == 200) {
                    document.getElementById("question1").innerHTML = hike.responseText;
                }
            };
            hike.open("GET", "z2.txt", true);
            hike.send();

            if (typeof (Storage) !== "undefined") {
                if (localStorage.score) {
                    localStorage.score = Number(localStorage.score) + 2;
                } else {
                    localStorage.score = 2;
                }
                document.getElementById("score").innerHTML = "Your score: " + localStorage.score;
            } else {
                document.getElementById("score").innerHTML = "Sorry, you need a device with web storage to save your score.";
            }
        }


        function movie() {
            var movies = new XMLHttpRequest();
            movies.onreadystatechange = function () {
                if (movies.readyState == 4 && movies.status == 200) {
                    document.getElementById("question1").innerHTML = movies.responseText;
                }
            };
            movies.open("GET", "z0.txt", true);
            movies.send();

            if (typeof (Storage) !== "undefined") {
                if (localStorage.score) {
                    localStorage.score = Number(localStorage.score) + 0;
                } else {
                    localStorage.score = 0;
                }
                document.getElementById("score").innerHTML = "Your score: " + localStorage.score;
            } else {
                document.getElementById("score").innerHTML = "Sorry, you need a device with web storage to save your score.";
            }
        }

        function red() {
            document.body.style.backgroundColor = "DarkSalmon";
            document.getElementById("question2").style.color = "firebrick";

            if (typeof (Storage) !== "undefined") {
                if (localStorage.score) {
                    localStorage.score = Number(localStorage.score) + 1;
                } else {
                    localStorage.score = 0;
                }
                document.getElementById("score").innerHTML = "Your score: " + localStorage.score;
            } else {
                document.getElementById("score").innerHTML = "Sorry, you need a device with web storage to save your score.";
            }
            var answer = new XMLHttpRequest();
            answer.onreadystatechange = function () {
                if (answer.readyState == 4 && answer.status == 200) {
                    document.getElementById("question2").innerHTML = answer.responseText;
                }
            };
            answer.open("GET", "z1.txt", true);
            answer.send();

        }

        function blue() {
            document.body.style.backgroundColor = "cyan";
            document.getElementById("question2").style.color = "darkblue";

            if (typeof (Storage) !== "undefined") {
                if (localStorage.score) {
                    localStorage.score = Number(localStorage.score) + 0;
                } else {
                    localStorage.score = 0;
                }
                document.getElementById("score").innerHTML = "Your score: " + localStorage.score;
            } else {
                document.getElementById("score").innerHTML = "Sorry, you need a device with web storage to save your score.";
            }
            var answer = new XMLHttpRequest();
            answer.onreadystatechange = function () {
                if (answer.readyState == 4 && answer.status == 200) {
                    document.getElementById("question2").innerHTML = answer.responseText;
                }
            };
            answer.open("GET", "z0.txt", true);
            answer.send();
        }

        function green() {
            document.body.style.backgroundColor = "GreenYellow";
            document.getElementById("question2").style.color = "ForestGreen";


            if (typeof (Storage) !== "undefined") {
                if (localStorage.score) {
                    localStorage.score = Number(localStorage.score) + 2;
                } else {
                    localStorage.score = 0;
                }
                document.getElementById("score").innerHTML = "Your score: " + localStorage.score;
            } else {
