        }

        function createBox() {
            var btn = document.createElement("a");
            var t = document.createTextNode("Would you like to visit my homepage? Click here!");
            btn.setAttribute('href', "http://mbutterfield.com");
            btn.appendChild(t);
            document.body.appendChild(btn);
        }

        function onLoad() {
            alert("Welcome to Mikel's Quiz! Find out how much you have in common with Mikel here!");
        }


