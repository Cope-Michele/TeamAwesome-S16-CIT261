            answer.onreadystatechange = function () {
                if (answer.readyState == 4 && answer.status == 200) {
                    document.getElementById("question3").innerHTML = answer.responseText;
                }
            };
            answer.open("GET", "z2.txt", true);
            answer.send();
        }
        function pop() {

            if (typeof (Storage) !== "undefined") {
                if (localStorage.score) {
                    localStorage.score = Number(localStorage.score) + 0;
                } else {
                    localStorage.score = 0;
                }
                document.getElementById("score").innerHTML = "Your score: " + localStorage.score;
            } else {
                document.getElementById("score").innerHTML = "Sorry, you need a device with web storage to save your score.";
            }

            var answer = new XMLHttpRequest();
            answer.onreadystatechange = function () {
                if (answer.readyState == 4 && answer.status == 200) {
                    document.getElementById("question3").innerHTML = answer.responseText;
                }
            };
            answer.open("GET", "z0.txt", true);
            answer.send();
        }
        function hardcore() {

            if (typeof (Storage) !== "undefined") {
                if (localStorage.score) {
                    localStorage.score = Number(localStorage.score) - 500;
                } else {
                    localStorage.score = 0;
                }
                document.getElementById("score").innerHTML = "Your score: " + localStorage.score;
            } else {
                document.getElementById("score").innerHTML = "Sorry, you need a device with web storage to save your score.";
            }

            var answer = new XMLHttpRequest();
            answer.onreadystatechange = function () {
                if (answer.readyState == 4 && answer.status == 200) {
                    document.getElementById("question3").innerHTML = answer.responseText;
                }
            };
            answer.open("GET", "z-.txt", true);
            answer.send();
        }

        function reset() {

            localStorage.score = 0;
            document.getElementById("score").innerHTML = "Your score has been reset to: " + localStorage.score;
        }


        function textInput() {
            if (typeof (Storage) !== "undefined") {
                if (localStorage.score) {
                    localStorage.score = Number(localStorage.score) + 1;
                } else {
                    localStorage.score = 0;
                }
                document.getElementById("score").innerHTML = "Your score: " + localStorage.score;
            } else {
                document.getElementById("score").innerHTML = "Sorry, you need a device with web storage to save your score.";
            }


            var answer = new XMLHttpRequest();
            answer.onreadystatechange = function () {
                if (answer.readyState == 4 && answer.status == 200) {
                    document.getElementById("submitButton").innerHTML = answer.responseText;
                }
            };
            answer.open("GET", "z1.txt", true);
            answer.send();

        }

        function json() {

            var name = document.getElementById("name").value;
            var age = document.getElementById("age").value;
            var gender = document.getElementById("gender").value;
            var array = [name, age, gender];
            var json = JSON.stringify(array);
            var noJson = JSON.parse(json);

            document.getElementById("welcome").innerHTML = "your info is " + json;


            if (typeof (Storage) !== "undefined") {
                if (localStorage.score) {
                    localStorage.score = Number(localStorage.score) + 2;
                } else {
                    localStorage.score = 0;
                }
                document.getElementById("score").innerHTML = "Your score: " + localStorage.score;
            } else {
                document.getElementById("score").innerHTML = "Sorry, you need a device with web storage to save your score.";
            }

            var answer = new XMLHttpRequest();
            answer.onreadystatechange = function () {
                if (answer.readyState == 4 && answer.status == 200) {
                    document.getElementById("question5").innerHTML = answer.responseText;
                }
            };
            answer.open("GET", "z2.txt", true);
            answer.send();
        }
        function json2() {

            var name = document.getElementById("name").value;
